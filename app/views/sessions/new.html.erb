<div class="ui middle aligned center aligned three column grid">
<div class="column"></div>
  <div class="column">
    <h2 class="ui image header">
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <%= form_for(:session, html:{class: "ui large form", role: "form"}, url: login_path) do |f|%>
      <div class="ui stacked secondary  segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :email, placeholder: "E-mail address"%>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.text_field :username, placeholder: "User Name"%>
          </div>
        </div>
        <div><%= f.button("Login", class: "ui fluid large  submit button  red") %></div>
      </div>
    <% end %>
  </div>
<div class="column"></div>
</div>